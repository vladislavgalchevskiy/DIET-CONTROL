<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="293dp"
    android:layout_height="312dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/new_food"
    android:elevation="4dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#3b4446"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Новый продукт"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#3b4446"
        android:text="*данные калорийности и БЖУ на 100 грамм продукта"/>

    <RelativeLayout
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/pfc"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#3b4446"
            android:textAlignment="center"
            android:text="Название продукта"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="9dp"
            android:backgroundTint="@android:color/transparent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLength="24"
            android:textAllCaps="false"
            android:textColor="#3b4446"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/pfc"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#3b4446"
            android:textAlignment="center"
            android:text="Каллорийность"/>

        <EditText
            android:id="@+id/calories_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLength="4"
            android:textAllCaps="false"
            android:textColor="#3b4446"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="225dp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#3b4446"
            android:gravity="center_vertical"
            android:text="ккал"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pfc"
            android:elevation="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#3b4446"
                android:textAlignment="center"
                android:text="Белки"/>

            <EditText
                android:id="@+id/protein_add"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="#3b4446"
                android:textSize="16sp"
                android:maxLength="4"
                android:textStyle="bold"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="65dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3b4446"
                android:gravity="center_vertical"
                android:text="гр"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pfc"
            android:elevation="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#3b4446"
                android:textAlignment="center"
                android:text="Жиры"/>

            <EditText
                android:id="@+id/fat_add"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#3b4446"
                android:textStyle="bold"
                android:maxLength="4"
                android:backgroundTint="@android:color/transparent"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="65dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3b4446"
                android:gravity="center_vertical"
                android:text="гр"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pfc"
            android:elevation="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#3b4446"
                android:textAlignment="center"
                android:text="Углеводы" />

            <EditText
                android:id="@+id/carbs_add"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#3b4446"
                android:textStyle="bold"
                android:maxLength="4"
                android:backgroundTint="@android:color/transparent"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="65dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3b4446"
                android:gravity="center_vertical"
                android:text="гр"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/back_button"
            android:elevation="4dp">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:text="Отмена"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/back_button"
            android:elevation="4dp">

            <Button
                android:id="@+id/add_button_new_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#99cd4e"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:text="Готово"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>